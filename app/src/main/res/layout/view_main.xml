<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_View"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></RelativeLayout>

    <TextView
        android:id="@+id/walkCount_main"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMove"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/txtView3"
        android:gravity="center"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/walkCount_main"
        android:layout_toStartOf="@+id/walkCount_main"
        android:text="오늘"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/walkCount_main"
        android:layout_marginStart="-12dp"
        android:layout_toEndOf="@+id/walkCount_main"
        android:text="걸음 걸었습니다."
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtFinish"
        android:layout_marginBottom="33dp"
        android:text="상세보기" />


    <TextView
        android:id="@+id/txtView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp"
        android:text="현재위치"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:text="집"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtView3"
        android:layout_marginStart="45dp"
        android:text="출발지"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtView3"
        android:layout_marginEnd="45dp"
        android:text="도착지"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtNow"
        android:layout_marginStart="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtNow"
        android:layout_marginEnd="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="187dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:background="?android:attr/listDivider" />

    <EditText
        android:id="@+id/edtStart"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtFinish"
        android:layout_alignStart="@+id/txtView1"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="출발위치 입력"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtFinish"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtView1"
        android:layout_marginBottom="203dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="도착위치 입력"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tetView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMove"
        android:layout_marginTop="-33dp"
        android:layout_toStartOf="@+id/walkCountY"
        android:text="어제보다"
        android:textAlignment="textEnd"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/walkCountY"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/walkCount_main"
        android:layout_below="@+id/btnMove"
        android:layout_marginTop="-35dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tetView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMove"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="-33dp"
        android:layout_toEndOf="@+id/walkCount_main"
        android:text="걸음"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtFinish"
        android:layout_alignStart="@+id/btnMove"
        android:text="검색" />

    <TextView
        android:id="@+id/sumResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMove"
        android:layout_marginTop="-33dp"
        android:layout_toStartOf="@+id/txtNow"
        android:text="더"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMove"
        android:layout_marginTop="-33dp"
        android:layout_toEndOf="@+id/txtNow"
        android:text="걸었습니다."
        android:textSize="13sp" />

</RelativeLayout>